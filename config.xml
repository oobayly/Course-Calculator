<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="net.tipstrade.racecoursemanager"
        version="0.0.16"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap="http://phonegap.com/ns/1.0">
  <!-- App -->
  <name>Course Calculator</name>
  <description>
    A set of tools for race officers to aid mark laying.
  </description>
  <author href="https://github.com/oobayly"/>
  <content src="index.html"/>
  <!-- Plugins -->
  <gap:plugin name="cordova-plugin-appversion" source="npm"/>
  <gap:plugin name="cordova-plugin-customurlscheme" source="npm">
    <param name="URL_SCHEME" value="coursemanager"/>
  </gap:plugin>
  <gap:plugin name="cordova-plugin-device" source="npm"/>
  <gap:plugin name="cordova-plugin-device-orientation" source="npm"/>
  <gap:plugin name="cordova-plugin-geolocation" source="npm"/>
  <gap:plugin name="cordova-plugin-inappbrowser" source="npm"/>
  <gap:plugin name="cordova-plugin-network-information" source="npm"/>
  <gap:plugin name="cordova-plugin-x-socialsharing" source="npm"/>
  <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
  <!-- Plugins for local build -->
  <plugin name="cordova-plugin-appversion"/>
  <plugin name="cordova-plugin-customurlscheme">
    <param name="URL_SCHEME" value="coursemanager"/>
  </plugin>
  <plugin name="cordova-plugin-device"/>
  <plugin name="cordova-plugin-device-orientation"/>
  <plugin name="cordova-plugin-geolocation"/>
  <plugin name="cordova-plugin-inappbrowser"/>
  <plugin name="cordova-plugin-network-information"/>
  <plugin name="cordova-plugin-x-socialsharing"/>
  <plugin name="cordova-plugin-whitelist"/>
  <!-- Whitelisting -->
  <access origin="*"/>
  <!-- Preferences -->
  <preference name="phonegap-version"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="16"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <!-- Phonegap build -->
  <icon gap:platform="android" src="res/android/icon/drawable-ldpi-icon.png" density="ldpi"/>
  <icon gap:platform="android" src="res/android/icon/drawable-mdpi-icon.png" density="mdpi"/>
  <icon gap:platform="android" src="res/android/icon/drawable-hdpi-icon.png" density="hdpi"/>
  <icon gap:platform="android" src="res/android/icon/drawable-xhdpi-icon.png" density="xhdpi"/>
  <icon gap:platform="android" src="res/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi"/>
  <icon gap:platform="android" src="res/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-land-ldpi-screen.png" density="land-ldpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-land-mdpi-screen.png" density="land-mdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-land-xhdpi-screen.png" density="land-xhdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-land-xxhdpi-screen.png" density="land-xxhdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-port-ldpi-screen.png" density="port-ldpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-port-mdpi-screen.png" density="port-mdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-port-hdpi-screen.png" density="port-hdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-port-xhdpi-screen.png" density="port-xhdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-port-xxhdpi-screen.png" density="port-xxhdpi"/>
  <gap:splash gap:platform="android" src="res/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi"/>
  <!-- Local build -->
  <platform name="android">
    <icon src="www/res/android/icon/drawable-ldpi-icon.png" density="ldpi"/>
    <icon src="www/res/android/icon/drawable-mdpi-icon.png" density="mdpi"/>
    <icon src="www/res/android/icon/drawable-hdpi-icon.png" density="hdpi"/>
    <icon src="www/res/android/icon/drawable-xhdpi-icon.png" density="xhdpi"/>
    <icon src="www/res/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi"/>
    <icon src="www/res/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi"/>
    <splash src="www/res/android/splash/drawable-land-ldpi-screen.png" density="land-ldpi"/>
    <splash src="www/res/android/splash/drawable-land-mdpi-screen.png" density="land-mdpi"/>
    <splash src="www/res/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi"/>
    <splash src="www/res/android/splash/drawable-land-xhdpi-screen.png" density="land-xhdpi"/>
    <splash src="www/res/android/splash/drawable-land-xxhdpi-screen.png" density="land-xxhdpi"/>
    <splash src="www/res/android/splash/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi"/>
    <splash src="www/res/android/splash/drawable-port-ldpi-screen.png" density="port-ldpi"/>
    <splash src="www/res/android/splash/drawable-port-mdpi-screen.png" density="port-mdpi"/>
    <splash src="www/res/android/splash/drawable-port-hdpi-screen.png" density="port-hdpi"/>
    <splash src="www/res/android/splash/drawable-port-xhdpi-screen.png" density="port-xhdpi"/>
    <splash src="www/res/android/splash/drawable-port-xxhdpi-screen.png" density="port-xxhdpi"/>
    <splash src="www/res/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi"/>
  </platform>
</widget>
